# Sway config
# 2020-05-05

# Variables
set $mod Mod4
set $term alacritty
set $font "Hack Nerd Font Regular 9"
set $wallpaper "~/.wallpaper.png"

# Colors
set $c_pn_0 #2E3440
set $c_pn_1 #3B4252
set $c_pn_2 #434C5E
set $c_pn_3 #4C566A
set $c_ss_0 #D8DEE9
set $c_ss_1 #E5E9F0
set $c_ss_2 #ECEFF4
set $c_hf_0 #8FBCBB
set $c_hf_1 #88C0D0
set $c_hf_2 #81A1C1
set $c_hf_3 #5E81AC
set $c_ha_0 #BF616A
set $c_ha_1 #D08770
set $c_ha_2 #EBCB8B
set $c_ha_3 #A3BE8C
set $c_ha_4 #B48EAD

set $colorMenuBg $c_pn_0
set $colorMenuFg $c_hf_1

set $menu bemenu-run \
  --prompt="▶" \
  --bottom \
  --ignorecase \
  --line-height=32 \
  --fn=$font \
  --tb="$colorMenuBg" \
  --tf="$colorMenuFg" \
  --fb="$colorMenuBg" \
  --ff="$colorMenuFg" \
  --nb="$colorMenuBg" \
  --nf="$colorMenuFg" \
  --hb="$colorMenuFg" \
  --hf="$colorMenuBg" \
  | xargs swaymsg exec

set $lockColorBackground "#186686"
set $lockColorRing "#071f28"

set $lock swaylock --daemonize

# Workspace names
set $ws1 1 一 yī
set $ws2 2 二 èr
set $ws3 3 三 sān
set $ws4 4 四 sì
set $ws5 5 五 wǔ
set $ws6 6 六 liù
set $ws7 7 七 qī
set $ws8 8 八 bā
set $ws9 9 九 jiǔ
set $ws10 10 十 shí

# Start background processes
exec mako
exec swayidle -w \
    timeout 300 'swaylock -f' \
    timeout 600 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f'

# Sway configuration
font $font
floating_modifier $mod

## Window decorations
default_border none
default_floating_border normal
smart_gaps off
gaps inner 4

output * bg $wallpaper fill

input type:keyboard {
  xkb_options caps:escape
}

input type:touchpad {
  natural_scroll enabled
}

# Keybindings
bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Shift+q kill
bindsym Ctrl+Alt+l exec $lock
bindsym XF86Eject exec $lock

bindsym $mod+Shift+Return exec firefox
bindsym $mod+Shift+p exec "gopass-bemenu"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+semicolon move scratchpad
bindsym $mod+semicolon scratchpad show

bindsym $mod+v split v
bindsym $mod+Shift+v split h

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec "swaynag -t warning -m 'Exit?' -b 'Yes, exit!' 'swaymsg exit'"

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Multimedia keys
set $backlightDisplay "nv_backlight"
set $backlightKeyboard "smc::kbd_backlight"

bindsym XF86MonBrightnessUp exec brightnessctl --device=$backlightDisplay s 10%+
bindsym XF86MonBrightnessDown exec brightnessctl --device=$backlightDisplay s 10%-
bindsym XF86KbdBrightnessUp exec brightnessctl --device=$backlightKeyboard s 10%+
bindsym XF86KbdBrightnessDown exec brightnessctl --device=$backlightKeyboard s 10%-
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer sset Master 5%-
bindsym XF86AudioMute exec amixer sset Master toggle

# Color scheme
#                       Border  BG      Text    Ind     Child border
client.focused          $c_pn_3 $c_pn_3 $c_ss_2 $c_ha_2 $c_pn_3
client.focused_inactive $c_pn_0 $c_pn_1 $c_ss_0 $c_hf_2 $c_pn_0
client.unfocused        $c_pn_0 $c_pn_0 $c_ss_0 $c_hf_2 $c_pn_0
client.urgent           $c_ha_0 $c_ha_0 $c_ss_2 $c_ha_0 $c_pn_0
client.placeholder      $c_ss_1 $c_ss_1 $c_pn_0 $c_ss_1 $c_ss_1
client.background               $c_pn_0

bar {
  swaybar_command waybar
}

